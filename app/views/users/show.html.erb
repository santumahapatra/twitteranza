<div>
  <div>User Email: <%= @user.email %></div>
  
  <section>
    <%= render 'shared/stats' %>
  </section>
  
  <%= render 'follow_form' if signed_in? %>
  <% if @tweets.any? %>
    <ul class="tweets_box">
      <% @tweets.each do |tweet| %>
        <li class="tweet">
          <%= tweet.content %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>