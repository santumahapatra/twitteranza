<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <div><%= @user.email %></div>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Tweets:</b> <%= @user.tweets.count %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div>
          <% @users.each do |user| %>
            <%= user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
    <% end %>
  </div>
</div>